{
  "rewrites": [
    {
      "source": "/((?!api|_next/static|_next/image|favicon.ico|locales|assets).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/locales/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}